<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/et_charity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Charity"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_sparks2"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Total Sparks:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_sparks"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:text="#"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/spend_currency_symbol"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            app:srcCompat="@mipmap/spark_a" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_spend_sparks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Amount to spend"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_spend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/round_button"
        android:text="Spend Sparks Now" />

    <Button
        android:id="@+id/btn_spend_sparks_viewhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/round_button"
        android:text="View Sparks Timeline" />
</LinearLayout>
