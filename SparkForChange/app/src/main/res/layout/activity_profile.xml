<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_timeline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_weight="1"
        android:background="@drawable/round_button"
        android:text="View timeline" />

    <Button
        android:id="@+id/btn_payment_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_weight="1"
        android:background="@drawable/round_button"
        android:text="Update Payment Method" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_current_sparks_label"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="left"
            android:inputType="textPersonName"
            android:text="Current Sparks:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_current_sparks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:gravity="right"
            android:text="@string/current_sparks"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/profile_currency_symbol_1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            app:srcCompat="@mipmap/spark_a" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lifetime_sparks_label"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="left"
            android:inputType="textPersonName"
            android:text="Lifetime Sparks:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_lifetime_sparks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:gravity="right"
            android:text="@string/lifetime_sparks"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/profile_currency_symbol_2"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            app:srcCompat="@mipmap/spark_a" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sparks_next_badge_label"
            android:layout_width="436dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="left"
            android:inputType="textPersonName"
            android:text="Sparks to next badge:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_sparks_next_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:text="@string/sparks_to_next_badge"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/profile_currency_symbol_3"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            app:srcCompat="@mipmap/spark_a" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_badges"
                android:layout_width="match_parent"
                android:layout_height="286dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
