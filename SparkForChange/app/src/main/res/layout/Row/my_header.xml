<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="160dp"
                android:theme="@style/AppTheme"
                android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:gravity="start"
        android:text="Username"
        android:paddingBottom="4dp"
        android:id="@+id/tV_username_header"
        android:layout_alignTop="@+id/profile_image"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_toEndOf="@+id/profile_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tV_email_header"
        android:gravity="start"
        android:text="Email"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/tV_username_header"
        android:layout_alignLeft="@+id/tV_username_header"
        android:layout_alignStart="@+id/tV_username_header"/>
</RelativeLayout>